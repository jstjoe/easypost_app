{
  "name": "Easypost App",
  "author": {
    "name": "Zendesk Services",
    "email": "services@zendesk.com"
  },
  "defaultLocale": "en",
  "private": true,
  "location": [ "ticket_sidebar" ],
  "version": "1.0.0",
  "frameworkVersion": "1.0",

  "parameters": [
    {
      "name": "company_name",
      "type": "text",
      "required": true
    },
    {
      "name": "attention_name",
      "type": "text",
      "required": true
    },
    {
      "name": "business_address",
      "type": "text",
      "required": true
    },
    {
      "name": "city",
      "type": "text",
      "required": true
    },
    {
      "name": "state",
      "type": "text",
      "required": true
    },
    {
      "name": "country_code",
      "type": "text",
      "required": true
    },
    {
      "name": "zip_code",
      "type": "number",
      "required": true
    },
    {
      "name": "support_email",
      "type": "text",
      "default": "support@example.com",
      "required": true
    },
    {
      "name": "phone_number",
      "type": "number",
      "required": true
    },
    {
      "name": "editable_form",
      "type": "checkbox",
      "default": "no"
    },
    {
      "name": "user_address_field",
      "type": "text",
      "default": "address"
    },
    {
      "name": "user_city_field",
      "type": "text",
      "default": "city"
    },
    {
      "name": "user_state_field",
      "type": "text",
      "default": "state"
    },
    {
      "name": "user_zip_field",
      "type": "text",
      "default": "zip"
    },
    {
      "name": "user_country_field",
      "type": "text",
      "default": "country"
    },
    {
      "name": "small_size_width",
      "type": "text",
      "default": "3"
    },
    {
      "name": "small_size_height",
      "type": "text",
      "default": "5"
    },
    {
      "name": "small_size_length",
      "type": "text",
      "default": "5"
    },
    {
      "name": "small_size_weight",
      "type": "text",
      "default": "5"
    },
    {
      "name": "medium_size_width",
      "type": "text",
      "default": "5"
    },
    {
      "name": "medium_size_height",
      "type": "text",
      "default": "7"
    },
    {
      "name": "medium_size_length",
      "type": "text",
      "default": "7"
    },
    {
      "name": "medium_size_weight",
      "type": "text",
      "default": "10"
    },
    {
      "name": "large_size_width",
      "type": "text",
      "default": "8"
    },
    {
      "name": "large_size_height",
      "type": "text",
      "default": "10"
    },
    {
      "name": "large_size_length",
      "type": "text",
      "default": "10"
    },
    {
      "name": "large_size_weight",
      "type": "text",
      "default": "15"
    },
    {
      "name": "easypost_testing_token",
      "type": "text",
      "required": true
    },
    {
      "name": "easypost_production_token",
      "type": "text"
    },
    {
      "name": "tracking_field",
      "type": "number"
    },
    {
      "name": "production_on",
      "type": "checkbox",
      "default": "no"
    }
  ]
}
